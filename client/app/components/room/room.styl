#room	
	color: #FFFFFF
	
	.room-header		
		padding: 0 20px
		
		h2
			padding: 15px 0
			margin: 0
			margin-bottom: 10px
			border-bottom: 1px solid #FFFFFF
			font-weight: bold
			
		.clock
			font-size: 25px;
	

	.room-body

		#new-player-form
			text-align: center;
			
			margin-top: 100px;
			// position: absolute;
			// top: 50%;
			// transform: translateY(-50%);
			
			// width: 100%;

			.new-player
				background: none;
				border-radius: 0;
				border: none;
				border-bottom: 1px solid #FFFFFF;
				padding: 10px;
				width: 100%;
				
			.new-player::-webkit-input-placeholder
				color: #FFFFFF;
				text-transform: uppercase;

			.new-player:-moz-placeholder 
				color: #FFFFFF;
				text-transform: uppercase;

			.new-player::-moz-placeholder
				color: #FFFFFF;
				text-transform: uppercase;

			.new-player:-ms-input-placeholder
				color: #FFFFFF;
				text-transform: uppercase;
			
			.btn
				background: none;
				color: #FFFFFF;
				text-transform: uppercase;
				border: none;
				
		.card-body
			font-size: 30px
			font-weight: bold
			padding: 100px 5px