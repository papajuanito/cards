#room	
	color: #FFFFFF
	height: 100%
	
	.player-count
		font-size: 30px;
		margin-bottom: 40px;

	.player-connected-list
		
		text-align: right;

		li
			display: inline-block;
			margin-right: 50px;
			text-align: center;
			
			&.last
				margin-right: 0;
			
			i
				font-size: 60px;
			
			p
				font-size: 25px;
				font-weight: bold;
				
	.player-connect-form
		
		float: right;
		text-align: right;
		
		.form-group
			
			min-width: 300px;
		
			.form-control
				color: #FFFFFF;
				background: none;
				border: none;
				border-bottom: 2px solid #FFFFFF;
				border-radius: 0;
				padding-right: 0;
				text-align: right;
				
				&::-webkit-input-placeholder
					color: #FFFFFF;
				
				&:-moz-placeholder
					color: #FFFFFF;
					
				&::-moz-placeholder
					color: #FFFFFF;

				&:-ms-input-placeholder
					color: #FFFFFF;

		.btn
			border: none;
			background: none;
			color: #FFFFFF;
			text-transform: uppercase;
			padding-right: 0;